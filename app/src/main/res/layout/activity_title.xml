<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <ImageView
        android:id="@+id/mainpageLogo"
        android:layout_width="425dp"
        android:layout_height="384dp"
        android:layout_weight="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logoupdated" />

    <Button
        android:id="@+id/toMain"
        android:layout_width="255dp"
        android:layout_height="77dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="140dp"
        android:background="@drawable/search"
        android:onClick="start"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mainsignin" />

    <Button
        android:id="@+id/mainsignin"
        android:layout_width="270dp"
        android:layout_height="65dp"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="31dp"
        android:background="@drawable/loginicon"
        android:onClick="logIn"
        app:layout_constraintBottom_toTopOf="@+id/toMain"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mainpageLogo" />

</androidx.constraintlayout.widget.ConstraintLayout>